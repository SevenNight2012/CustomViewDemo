<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 全局替换AppCompatViewInflater -->
        <item name="viewInflaterClass">com.mrcd.custom.view.inflater.MyCompatViewInflater</item>
        <item name="android:textColor">#444444</item>
    </style>

    <declare-styleable name="LanguageLinearLayout_Layout">
        <attr name="autoChange" format="boolean" />
    </declare-styleable>

    <style name="test_style" parent="Theme.AppCompat">
        <item name="android:background">#f00</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0f0</item>
    </style>
</resources>
